
name: Build and test project
on:
  push:
    branches: [trunk]
  pull_request:
    branches: [trunk]
jobs:
  build:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v3
    - uses: actions/setup-node@v3
      with:
        node-version: 18
    - run: npm ci
    # Make sure you add a 'test' script!
    - run: npm test
    # Make sure you register your 'build' hook into the 'prepack' script!
    - run: npm pack
